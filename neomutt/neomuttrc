# CUSTOM HELP
#
# Bindings: See the bindings right below.
# Closing a pop-up: use ctrl-g. It cannot be remap.
# Reply-all: g
#
bind index z collapse-thread
bind index Z collapse-all
#

set my_name = Anthony Ruhier
source "gpg -dq $HOME/.config/neomutt/mailbox.gpg |"
set spoolfile = +INBOX
set postponed = +Drafts
set record = "+Sent"

set use_threads = reverse
set collapse_all = yes
set collapse_unread=yes
set uncollapse_new = no
set hide_limited = yes
# folder-hook . push '<collapse-all>'

# Allow Mutt to open a new IMAP connection automatically.
unset imap_passive

# Keep the IMAP connection alive by polling intermittently (time in seconds).
set imap_keepalive = 300

# How often to check for new mail (time in seconds).
set mail_check = 120

# See the headers when editing
set edit_headers = yes

set signature="~/.config/neomutt/signature"
